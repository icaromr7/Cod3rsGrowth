<mvc:View xmlns:cards="sap.f.cards"
	controllerName="ui5.anime.app.lista.Lista"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:fiori="sap.ui.webc.fiori"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	>
	<Page title="{i18n>TituloPaginaInicial}" class="sapUiResponsiveContentPadding" titleAlignment="Center">	
		<content>
				<List items = "{path: 'animes>/'}" class= "listaDeAnimes" id = "listaDeAnimes" growing="true" growingThreshold="10">
					<headerToolbar >
						<Toolbar class= "toolbar">
							<Title text="{i18n>listaDeAnimeTitulo}" class="tituloListaAnime"/>
							<ToolbarSpacer/>
							<Button 
								id= "btnListaDeGeneros" 
								text="{i18n>btnListaDeGeneros}" 
								press = "aoClicarEmListaDeGeneros"
							/>
							<Button
								id = "btnAdicionar"
								text="{i18n>btnAdicionar}"
								press= "aoClicarEmAdicionarAnime"
							/>
							<Select
								id = "selectStatus"
								change="aoSelecionarStatus"
								forceSelection="false"
								selectedKey="0"
								items="{
									path: 'status>/'
								}">
								<core:Item key="{status>id}" text="{status>descricao}" />
							</Select>
							<DatePicker
								id="dpDataLancamento"
								displayFormat="short"
								placeholder="ex: 18/07/2024"
								change= "aoSelecionarData"
								valueFormat='yyyy-MM-dd HH:mm:ss.000'
								width="12%"
								value= ""
								class= "filtroDataAnime"/>							
							<SearchField
								id = "CampoDeBusca" 
								width="30%" 
								liveChange="aoFiltrarAnime"
								placeholder="{i18n>placeholderPesquisa}"
							/>
						</Toolbar>
					</headerToolbar>
					<CustomListItem id = "listaDosAnimes" class = "ListaCustomizada" type="Navigation" press="aoClicarNoAnime" 
				>						
							<VBox class="vBoxAnime" >
								<Label text="{animes>nome}" class = "nomeAnime" />
									<Label text="{
										path: 'animes>dataLancamento',
										type: 'sap.ca.ui.model.type.Date',
										formatOptions: {pattern: 'dd/MM/YYYY'}}"
										class="dataAnime"/>
								<Label text="{path: 'animes>statusDeExibicao', formatter: '.formatter.enum' }" class = "statusAnime"/>
								
							</VBox>						
					</CustomListItem>
				</List>
		</content>
	</Page>
</mvc:View>
