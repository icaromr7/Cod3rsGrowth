<mvc:View
	controllerName="ui5.anime.app.lista.Lista"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
		<content>
			<Button
				id = "btnBemVindo"
				text="{i18n>btnbemVindo}"
				press=".onBemVindo"/>
				<List headerText="Lista de animes" items = "{path: '/'}">
					<CustomListItem>
						<HBox>
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Label text="{nome}"/>
							</VBox>
						</HBox>
					</CustomListItem>
				</List>
		</content>
	</Page>
</mvc:View>
