<mvc:View xmlns:smartmultiedit="sap.ui.comp.smartmultiedit" xmlns:macros="sap.fe.macros" 
    xmlns:layout="sap.ui.layout" 
    controllerName="ui5.anime.app.detalhesGenero.DetalhesGenero"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    >
    <Page title="{i18n>TituloPaginaDetalhesGenero}" class="sapUiResponsiveContentPadding"
        id = "pagina"
        showNavButton="true"
        navButtonPress="aoClicarEmVoltar"
        titleAlignment="Center"
    >
    <content >
        <layout:VerticalLayout width="100%">
            <Label text="{i18n>labelId}" class= "lblDetalhes"></Label>
            <Input id= "inputId" editable="false" value="{path: 'genero>/id'}" width="3%" textAlign="Center"></Input>
            <Label text="{i18n>labelNome}" class= "lblDetalhes"></Label>
            <Input id= "inputNome" editable="false" value="{path: 'genero>/nome'}" width="20%"></Input>          
        </layout:VerticalLayout>
    </content>
    </Page>
</mvc:View>